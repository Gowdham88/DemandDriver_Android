<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aurorasdp.allinall">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.aurorasdp.allinall.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AllinAllMaterialTheme">
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.UserSignupActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.ServiceProviderSignupActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.ServiceProviderActivity" />
        <activity android:name=".activities.UserActivity" />
        <activity android:name=".activities.SendOTPActivity" />
        <activity android:name=".activities.ProviderBookingActivity" />
        <activity android:name=".activities.UserBookingActivity" />
        <activity android:name=".activities.VerifyOTPActivity"></activity>
    </application>

</manifest>
