<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aurorasdp.allinall.activities.UserSignupActivity">

    <TextView
        android:id="@+id/user_signup_provider_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/normal_margin"
        android:text="@string/are_you_sp" />

    <LinearLayout
        android:id="@+id/user_signup_add_picture_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_image_height"
        android:layout_below="@+id/user_signup_provider_textview"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="5">


        <ImageView
            android:id="@+id/user_signup_add_picture_imageview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:src="@drawable/profile_circle" />

        <TextView
            android:id="@+id/user_signup_add_photo_textview"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Add Photo"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/user_signup_input_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_signup_add_picture_linearlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/user_signup_name_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/user_signup_name_edittext"
                    android:layout_alignTop="@+id/user_signup_name_edittext"
                    android:src="@android:drawable/ic_delete" />

                <EditText
                    android:id="@+id/user_signup_name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/user_signup_name_imageview"
                    android:layout_toRightOf="@+id/user_signup_name_imageview"
                    android:hint="@string/name" />

                <ImageView
                    android:id="@+id/user_signup_age_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/user_signup_age_spinner"
                    android:layout_below="@+id/user_signup_name_imageview"
                    android:src="@android:drawable/ic_delete" />

                <Spinner
                    android:id="@+id/user_signup_age_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_signup_name_edittext"
                    android:layout_toRightOf="@+id/user_signup_age_imageview"
                    android:inputType="number" />

                <ImageView
                    android:id="@+id/user_signup_mobile_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/user_signup_mobile_edittext"
                    android:layout_below="@+id/user_signup_age_imageview"
                    android:src="@android:drawable/ic_delete" />

                <Spinner
                    android:id="@+id/user_signup_country_code_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/user_signup_mobile_imageview"
                    android:layout_below="@+id/user_signup_age_spinner"
                    android:layout_alignBottom="@+id/user_signup_mobile_edittext"/>

                <EditText
                    android:id="@+id/user_signup_mobile_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_signup_age_spinner"
                    android:layout_toRightOf="@+id/user_signup_country_code_spinner"
                    android:hint="@string/mobile"
                    android:inputType="phone" />

                <ImageView
                    android:id="@+id/user_signup_email_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/user_signup_email_edittext"
                    android:layout_below="@+id/user_signup_mobile_imageview"
                    android:src="@android:drawable/ic_delete" />

                <EditText
                    android:id="@+id/user_signup_email_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_signup_mobile_edittext"
                    android:layout_toRightOf="@+id/user_signup_email_imageview"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress" />

                <ImageView
                    android:id="@+id/user_signup_password_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/user_signup_password_edittext"
                    android:layout_below="@+id/user_signup_email_imageview"
                    android:src="@android:drawable/ic_delete" />

                <EditText
                    android:id="@+id/user_signup_password_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_signup_email_edittext"
                    android:layout_toRightOf="@+id/user_signup_password_imageview"
                    android:hint="@string/password"
                    android:inputType="textPassword" />

                <CheckBox
                    android:id="@+id/user_signup_terms_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_signup_password_edittext"
                    android:text="Accept terms and conditions" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/user_signup_signup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_signup_input_scrollview"
        android:layout_centerHorizontal="true"
        android:text="@string/signup_login"
        android:textAllCaps="false" />
</RelativeLayout>