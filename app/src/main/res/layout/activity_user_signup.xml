<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.SendOTPActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/user_signup_add_picture_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_image_height"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="5">


            <ImageView
                android:id="@+id/user_signup_add_picture_imageview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/profile_circle" />

            <TextView
                android:id="@+id/user_signup_add_photo_textview"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Add Photo"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/user_signup_button"
            android:layout_below="@+id/user_signup_add_picture_linearlayout"
            android:layout_margin="@dimen/medium_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/darkGray"
                android:padding="@dimen/medium_margin">

                <TextView
                    android:id="@+id/user_signup_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium_margin"
                    android:text="@string/sign_up"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary" />

                <EditText
                    android:id="@+id/user_signup_name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_signup_textview"
                    android:background="@color/lightGray"
                    android:hint="@string/name"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/edit_text_padding" />

                <EditText
                    android:id="@+id/user_signup_email_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_signup_name_edittext"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@color/lightGray"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/edit_text_padding" />

                <EditText
                    android:id="@+id/user_signup_phone_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_signup_email_edittext"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@color/lightGray"
                    android:enabled="false"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:padding="@dimen/edit_text_padding" />

                <EditText
                    android:id="@+id/user_signup_address_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_signup_phone_edittext"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@color/lightGray"
                    android:hint="@string/address"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/edit_text_padding" />

                <EditText
                    android:id="@+id/user_signup_password_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_signup_address_edittext"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@color/lightGray"
                    android:hint="@string/password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:padding="@dimen/edit_text_padding" />

                <CheckBox
                    android:id="@+id/user_signup_terms_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_signup_password_edittext"
                    android:text="Accept terms and conditions"
                    android:textColor="@color/textColorPrimary" />

            </RelativeLayout>

        </ScrollView>

        <Button
            android:id="@+id/user_signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:background="@color/redButton"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="@color/textColorPrimary" />
    </RelativeLayout>
</RelativeLayout>