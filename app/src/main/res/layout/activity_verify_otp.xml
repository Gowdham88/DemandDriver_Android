<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.SendOTPActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:background="@color/darkGray"
        android:padding="@dimen/medium_margin">

        <TextView
            android:id="@+id/verify_otp_verification_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_margin"
            android:text="@string/verification"
            android:textColor="@color/textColorPrimary" />

        <EditText
            android:id="@+id/verify_otp_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verify_otp_verification_textview"
            android:background="@color/lightGray"
            android:hint="@string/enter_otp"
            android:inputType="number"
            android:maxLength="4"
            android:padding="@dimen/medium_margin" />

        <Button
            android:id="@+id/verify_otp_verify_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verify_otp_edittext"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@color/redButton"
            android:text="@string/verify_otp"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:id="@+id/verify_otp_resend_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verify_otp_verify_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/normal_margin"
            android:text="@string/resend"
            android:textColor="@color/redButton" />
    </RelativeLayout>

</RelativeLayout>
